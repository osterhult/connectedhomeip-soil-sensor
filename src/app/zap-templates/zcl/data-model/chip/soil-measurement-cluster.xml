<configurator>
  <domain name="CHIP"/>
  <cluster>
    <name>Soil Measurement</name>
    <domain>Measurement &amp; Sensing</domain>
    <description>Attributes and commands for configuring and reporting soil measurement.</description>
    <code>0x0430</code>
    <define>SOIL_MEASUREMENT_CLUSTER</define>
    <client tick="false" init="false">true</client>
    <server tick="false" init="false">true</server>
    <attribute side="server" code="0x0000" name="SoilMoistureMeasuredValue" define="SOILMOIST_MEASURED_VALUE" type="percent" min="0x0000" isNullable="true">
      <mandatoryConform/>
    </attribute>
    <attribute side="server" code="0x0001" name="SoilMoistureMinMeasurableValue" define="SOILMOIST_MIN_MEASURABLE_VALUE" type="percent" min="0x0000" max="0x0063" isNullable="false" default="0x0064">
      <mandatoryConform/>
    </attribute>
    <attribute side="server" code="0x0002" name="SoilMoistureMaxMeasurableValue" define="SOILMOIST_MAX_MEASURABLE_VALUE" type="percent" min="0x954e" isNullable="false" default="0x0064">
      <mandatoryConform/>
    </attribute>
    <attribute side="server" code="0x0003" name="SoilMoistureTolerance" define="SOILMOIST_TOLERANCE" type="percent" max="0x0064" default="0x000a" optional="true">
      <optionalConform/>
    </attribute>
  </cluster>
</configurator>
